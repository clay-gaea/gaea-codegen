  "components": {
    "schemas": {
      "User": {
        "title": "用户",
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "nickname": {
            "type": "string",
            "description": "昵称"
          },
          "username": {
            "type": "string",
            "description": "用户名"
          },
          "password": {
            "type": "string",
            "description": "密码",
            "maxLength": 64,
            "writeOnly": true
          },
          "mobile": {
            "type": "string",
            "description": "手机"
          },
          "email": {
            "type": "string",
            "description": "邮箱"
          },
          "avatar": {
            "type": "string",
            "description": "头像"
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "description": "状态0禁用 1启用"
          },
          "remark": {
            "type": "string",
            "description": "备注"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "readOnly": true
          },
          "updatedAt": {
            "type": "string",
            "format": "datetime",
            "readOnly": true
          },
          "departments": {
            "readOnly": true,
            "description": "所在部门",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Department"
            }
          },
          "resources": {
            "readOnly": true,
            "description": "直接权限",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Resource"
            }
          }
        }
      },
      "Department": {
        "title": "部门",
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "name": {
            "type": "string",
            "description": "名称"
          },
          "leaderId": {
            "type": "integer",
            "format": "int32",
            "description": "部门负责人"
          },
          "pId": {
            "type": "integer",
            "format": "int32",
            "description": "父级ID"
          },
          "status": {
            "type": "integer",
            "format": "int32"
          },
          "sort": {
            "type": "integer",
            "format": "int32"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "readOnly": true
          },
          "updatedAt": {
            "type": "string",
            "format": "datetime",
            "readOnly": true
          },
          "users": {
            "readOnly": true,
            "description": "所有员工",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/User"
            }
          },
          "resources": {
            "readOnly": true,
            "description": "所有权限",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Resource"
            }
          }
        }
      },
      "Resource": {
        "title": "资源(权限)",
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "name": {
            "type": "string",
            "description": "名称"
          },
          "type": {
            "type": "integer",
            "format": "int32",
            "description": "类型"
          },
          "icon": {
            "type": "string",
            "description": "图标"
          },
          "isDefault": {
            "type": "integer",
            "format": "int32",
            "description": "默认开启"
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "description": "状态"
          },
          "pId": {
            "type": "integer",
            "format": "int32",
            "description": "父级ID"
          },
          "appId": {
            "type": "integer",
            "format": "int32",
            "description": "应用ID"
          },
          "sort": {
            "type": "integer",
            "format": "int32",
            "description": "排序"
          },
          "remark": {
            "type": "string",
            "description": "备注"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "readOnly": true
          },
          "updatedAt": {
            "title": "更新时间",
            "type": "string",
            "format": "datetime",
            "readOnly": true
          },
          "departments": {
            "readOnly": true,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Department"
            }
          },
          "users": {
            "readOnly": true,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/User"
            }
          }
        }
      },
      "UserFilter": {
        "title": "用户筛选",
        "type": "object",
        "properties": {
          "ids": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int64"
            }
          },
          "nickname": {
            "type": "string",
            "description": "昵称模糊匹配"
          },
          "username": {
            "type": "string",
            "description": "昵称模糊匹配"
          },
          "mobile": {
            "type": "string",
            "description": "手机"
          },
          "email": {
            "type": "string",
            "description": "邮箱模糊匹配"
          },
          "status": {
            "type": "integer",
            "format": "int32"
          },
          "createdAtRange": {
            "description": "两个元素数组",
            "type": "array",
            "items": {
              "type": "string",
              "format": "datetime"
            }
          },
          "updatedAtRange": {
            "description": "两个元素数组",
            "type": "array",
            "items": {
              "type": "string",
              "format": "datetime"
            }
          },
          "relations": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "departments",
                "resources"
              ]
            }
          }
        }
      },
      "DepartmentFilter": {
        "title": "部门筛选",
        "type": "object",
        "properties": {
          "ids": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int64"
            }
          },
          "relations": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "users",
                "resources"
              ]
            }
          }
        }
      },
      "ResourceFilter": {
        "title": "资源筛选",
        "type": "object",
        "properties": {
          "ids": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int64"
            }
          }
        }
      },
      "Page": {
        "title": "Page",
